%
% 格式化输出 LaTeX 命令等并生成索引
%
\let\bs\textbackslash
\newcommand{\eei}[1]{%
\index{extension!\texttt{#1}}\texttt{#1}}
% 字体索引(Font index) \fni
\newcommand{\fni}[1]{%
\index{font!#1@\texttt{\llap{\bs}#1}}%
\index{#1@\texttt{\llap{\bs}#1}}%
\cmd{#1}%
}
% 命令索引(Command index) \ci
\newcommand{\cih}[1]{%
\index{commands!#1@\texttt{\bs#1}}%
\index{#1@\texttt{\llap{\bs}#1}}
}
\newcommand{\ci}[1]{\cih{#1}\cmd{#1}}
% 宏包索引(Package index) \pai
\newcommand{\paih}[1]{%
\index{packages!#1@\pkg{#1}}%
\index{#1@\pkg{#1}}}
\newcommand{\pai}[1]{%
\paih{#1}\pkg{#1}}
% 环境索引(Environment index) \ei
\newcommand{\ei}[1]{%
\index{environments!\env{#1}}%
\index{#1@\env{#1}}%
\texttt{#1}}
% 词语索引(Word index) \wi
\newcommand{\wi}[1]{\index{#1}#1}

